<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person"/>

    <EditText
        android:id="@+id/pesquisar"
        style="@style/Pesquisar"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:drawableRight="@drawable/ic_edit2"
        android:hint="Nome de usuÃ¡rio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddPost"
        style="@style/Button"
        android:layout_width="201dp"
        android:layout_height="31dp"
        android:background="@drawable/button"
        android:drawableRight="@drawable/ic_add"
        android:fontFamily="@font/fraunces_extrabold"
        android:text="@string/post"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFavoritos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNotificacoes"
        style="@style/Button"
        android:layout_width="198dp"
        android:layout_height="32dp"
        android:background="@drawable/button"
        android:drawableRight="@drawable/ic_note"
        android:fontFamily="@font/fraunces_extrabold"
        android:text="@string/note"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFavoritos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAddPost"
        app:layout_constraintVertical_bias="0.062" />


    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonFavoritos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home" />

    <ImageButton
        android:id="@+id/buttonFavoritos"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPerfil"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonHome"
        app:srcCompat="@drawable/ic_favorite" />

    <ImageButton
        android:id="@+id/buttonPerfil"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonFavoritos"
        app:srcCompat="@drawable/ic_perfil" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSair"
        style="@style/Button"
        android:layout_width="94dp"
        android:layout_height="29dp"
        android:background="@drawable/button"
        android:drawableRight="@drawable/ic_out"
        android:fontFamily="@font/fraunces_extrabold"
        android:text="LogOut"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFavoritos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNotificacoes" />

</androidx.constraintlayout.widget.ConstraintLayout>