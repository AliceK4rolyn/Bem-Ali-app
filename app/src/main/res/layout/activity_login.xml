<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/background">

    <View
        android:id="@+id/view"
        style="@style/Box"
        android:layout_width="413dp"
        android:layout_height="650dp"
        android:layout_marginTop="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEntrar2"
        style="@style/Button"
        android:layout_width="178dp"
        android:layout_height="51dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button"
        android:text="@string/entrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:text="Bom te ver de novo"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editUsuario"
        style="@style/Edit_text"
        android:layout_marginTop="170dp"
        android:drawableRight="@drawable/ic_person2"
        android:hint="Usuário"
        android:textColorHint="@color/black"
        android:fontFamily="@font/lato_light_italic"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <EditText
        android:id="@+id/editSenha"
        style="@style/Edit_text"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/ic_view"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/lato_light_italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUsuario"
        android:inputType="textPassword"
        android:hint="Senha"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNaoTenhoCadastro"
        style="@style/Cad_Log"
        android:layout_width="179dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/log_cad_button"
        android:text="Não tenho cadastro"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonEntrar2"/>

</androidx.constraintlayout.widget.ConstraintLayout>